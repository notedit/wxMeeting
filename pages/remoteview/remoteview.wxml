<!--pages/remoteview/remoteview.wxml-->

<view style="width: {{styles.width}};height: {{styles.height}}">
  <live-player
     id="{{user}}"
        autoplay
        mode="RTC"
        object-fit="fillCrop"
        min-cache="0.1"
        max-cache="0.3"
        src="{{playUrl}}"
        background-mute="{{true}}"
        bindstatechange="onPlay"
        >
    <cover-image>
    </cover-image>
  </live-player>
</view>
