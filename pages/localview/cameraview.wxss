/* pages/cameraview/cameraview.wxss */


.pusher-container {
   display: inline-block;  
}
.pusher-box {
	position: relative; 
	display: inline-block; 
	overflow: hidden;
  width: 100%;
	height: 100%; 
	text-align: center;
  margin-bottom: 2vw;
  vertical-align: top;
}
.poster {
	position: absolute;  
  width: 100%;
	height: 100%; 
	background-repeat: no-repeat;
	background-position:center;
	background-color: #000;
}
live-pusher {
  width: 100%;
	height: 100%; 
}
.character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}